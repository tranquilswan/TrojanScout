<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.gearbox.scoutingappredux.AddTeamFragment">

    <EditText
        android:id="@+id/edtTeamNum"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Team#"
        android:inputType="number"
        android:textAlignment="center"
        android:maxLength="5"
        android:imeOptions="actionDone"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imgThumbnail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@mipmap/ic_launcher"/>
    </LinearLayout>

    <Button
        android:id="@+id/btnTakePicture"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Take Picture" />

    <EditText
        android:id="@+id/edtDriveSystem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Drive System"
        android:imeOptions="actionDone"
        android:inputType="textAutoComplete"/>

    <EditText
        android:id="@+id/edtFuncMech"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Functional Mechanism"
        android:imeOptions="actionDone"
        android:inputType="textAutoComplete"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <CheckBox
            android:id="@+id/chkUpperGoal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Upper Goal" />

        <CheckBox
            android:id="@+id/chkLowerGoal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Lower Goal" />
    </LinearLayout>


    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/rgpVision">
        <RadioButton
            android:id="@+id/radVisionYes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Vision" />
        <RadioButton
            android:id="@+id/radVisionNo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="No Vision" />
    </RadioGroup>

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/rgpAutonomous">
        <RadioButton
            android:id="@+id/radAutonomousYes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Autonomous" />
        <RadioButton
            android:id="@+id/radAutonomousNo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="No Autonomous" />
    </RadioGroup>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnSaveTeam"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Save Team" />

        <Button
            android:id="@+id/btnMainMenu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:text="Cancel" />

    </LinearLayout>

</LinearLayout>
