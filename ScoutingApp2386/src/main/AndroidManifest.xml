        <activity
            android:name="com.trojans.gearbox.scoutingappredux.HelpScreen"
            android:label="@string/title_activity_help_screen"
            android:parentActivityName="com.trojans.gearbox.scoutingappredux.MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.trojans.gearbox.scoutingappredux.MainActivity" />
        </activity>
        <activity
            android:name="com.trojans.gearbox.scoutingappredux.StatisticsActivity"
            android:label="@string/title_activity_statistics"
