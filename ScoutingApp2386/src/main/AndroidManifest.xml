            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.trojans.gearbox.scoutingappredux.StatisticsActivity" />
        </activity>
        <activity
            android:name="com.trojans.gearbox.scoutingappredux.ViewStatisticsActivity"
