        <!--android:name="android.support.PARENT_ACTIVITY"-->
        <!--android:value="com.example.gearbox.scoutingappredux.MainActivity" />-->
        <!--</activity>-->
        <activity
            android:name=".HelpScreen"
            android:label="@string/title_activity_help_screen"
            android:parentActivityName=".MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.gearbox.scoutingappredux.MainActivity" />
        </activity>
        <activity
            android:name=".StatisticsActivity"
            android:label="@string/title_activity_statistics"
            android:parentActivityName=".MainActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.gearbox.scoutingappredux.MainActivity" />
        </activity>
        <activity
            android:name=".AddStatistics"
            android:label="@string/title_activity_add_statistics"
            android:parentActivityName=".StatisticsActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.gearbox.scoutingappredux.StatisticsActivity" />
        </activity>
    </application>

</manifest>